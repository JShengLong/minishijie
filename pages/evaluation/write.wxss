/* pages/write/write.wxss */
@import '../myorder/logistics';

.write>view {
    margin: 3%;
    padding: 3%;
}

.write-main {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
}

.write-main>image {
    width: 90rpx;
    height: 120rpx;
}

.star-pos {
    width: 100%;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    /* justify-content: center; */
    align-items: center;
}

.star-pos image:first-child {
    margin-left: 0;
}

.stars {
    width: 40rpx;
    height: 40rpx;
    margin-left: 30rpx;
}

.write textarea {
    width: 90%;
    padding: 3%;
    margin: 5% auto;
    background: #fff;
    border-radius: 5px;
}

/*选择图片View*/

.addImv {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
}

/*添加图片*/

.addImv .chooseView {
    width: 160rpx;
    height: 160rpx;
    background-color: #fff;
    text-align: center;
    line-height: 180rpx;
    padding: 0rpx 7rpx;
    margin-left: 10rpx;
}

.addImv .chooseImv {
    width: 160rpx;
    height: 160rpx;
}

/*已选择的图片*/

.addImv .upFile {
    width: 160rpx;
    height: 160rpx;
    position: relative;
    padding: 0rpx 7rpx;
    margin: 10rpx 0;
}

.addImv .upFile .itemImv {
    width: 160rpx;
    height: 160rpx;
    padding: 0rpx 7rpx;
}

.addImv .upFile .closeImv {
    position: absolute;
    right: 0rpx;
    top: 0rpx;
    width: 33rpx;
    height: 33rpx;
}

.submit button {
    width: 90% !important;
    height: 80rpx;
    line-height: 80rpx;
    margin: 80rpx auto;
    border-radius: 60px;
}
