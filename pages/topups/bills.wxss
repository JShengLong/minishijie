/* pages/topups/bil.wxss */

.bill {
    padding: 100rpx 0;
}

.set label {
    width: 20%;
}

.set input,
.set text {
    width: 80%;
}

.set view {
    padding: 3%;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #f4f4f4;
    width: 100%;
    box-sizing: border-box;
}
.next_view{
    width: auto !important;
}
.set view image{
    width: 140px !important;
}
.payBox {
    background: -webkit-linear-gradient(top, rgba(14, 175, 241, 1), rgba(79, 198, 246, 1));
    /* Safari 5.1 - 6 */
    background: -o-linear-gradient(bottom, rgba(14, 175, 241, 1), rgba(79, 198, 246, 1));
    /* Opera 11.1 - 12*/
    background: -moz-linear-gradient(bottom, rgba(14, 175, 241, 1), rgba(79, 198, 246, 1));
    /* Firefox 3.6 - 15*/
    background: linear-gradient(to bottom, rgba(14, 175, 241, 1), rgba(79, 198, 246, 1));
}
.payBox{
    width: 130rpx;
    text-align: center;

}
.payBox,
.payBox>view {
    display: block !important;
    border: 0 !important;
}
.payBox navigator{
    display: inline-block !important;
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    border-radius: 10px;
    margin-top: 10rpx;
}