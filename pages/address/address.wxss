/* pages/address/address.wxss */

.address {
    margin: 30rpx;
    box-shadow: 2px 2px 10px 2px #efefef;
    border-radius: 3px;
}

.address-name {
    padding: 30rpx 30rpx 0;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
}

.address-content, .address-people {
    padding: 10rpx 30rpx 0;
}

.address-set {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    border-top: 1px solid #ededed;
    padding: 30rpx 30rpx 30rpx;
    align-items: center;
}

.address-btn {
    display: flex;
    flex-flow: row nowrap;
}

.address-btn button {
    width: 160rpx;
    height: 40rpx;
    line-height: 40rpx;
    background: none;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
}

.address-btn image {
    width: 25rpx;
    height: 25rpx;
    margin: 10rpx;
}

.address-btn button:first-child {
    border-right: 1px solid #ededed;
}

.footer button {
    width: 100% !important;
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
    border-radius: 30px;
}
