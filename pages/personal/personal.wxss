/* pages/personal/personal.wxss */

page {
    background: #f4f4f4;
}

.per-data {
    width: 22%;
}

.per-data image {
    width: 12rpx;
    height: 22rpx;
}

.per-cloum {
    margin-top: 30rpx;
    padding: 30rpx 0;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-around;
    align-items: center;
    border-top: 1px solid #ededed;
    text-align: center;
}

.per-vip-o {
    width: 90%;
    margin: 150rpx 5% 0;
    padding: 20rpx 0;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
}

.per-vip-o label {
    width: 20%;
    font-size: 32rpx;
}

.per-vip-o text {
    width: 75%;
}

.per-or {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    margin: 3%;
    padding: 3%;
    text-align: center;
}

.per-or .next {
    width: 14rpx !important;
    height: 25rpx !important;
}

.per-or view image {
    width: 51rpx;
    height: 50rpx;
}

.per-list-mian {
    margin: 0 5%;
    padding: 5% 0;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #ededed;
}

.per-list-mian image {
    width: 14rpx;
    height: 25rpx;
}

.per-list-mian .icon {
    width: 56rpx;
    height: 56rpx;
}

.per-list-mian view {
    width: 82%;
}

.per-top {
    position: relative;
}

.per-top>image {
    width: 100%;
    height: 318rpx;
}

.per-top>view {
    position: absolute;
    left: 5%;
    top: 30rpx;
    width: 90%;
    margin: auto;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
}

.per-top>view image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 100%;
    border: 5px solid #8cd2fe;
}

.per-top>view>view {
    width: 70%;
}

.per-top>view button {
    width: 150rpx !important;
    padding: 0;
    height: 45rpx;
    line-height: 40rpx;
    border-radius: 5px;
    background: none;
    border: 1px solid #fff;
}

.per-top .mt20, .per-top .ft34 {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
}

.perBox, .per-list {
    position: relative;
    top: -130rpx;
    z-index: 99;
    margin: 3%;
    border-radius: 5px;
}

.per-or-one {
    padding: 1% 3%;
    border-bottom: 1px solid #ededed;
}

.per-list-mian:last-child {
    border-bottom: 0;
}

.per-top .ft34 text {
    width: 70%;
}

.per-top .ft34 image {
    width: 53rpx;
    height: 49rpx;
    border: 0;
}
