/* pages/myorder/logistics.wxss */

.product, .logistic-o, .logistic {
    padding: 3%;
    margin: 3%;
    border-radius: 5px;
}

.product, .product .mt50, .logistic-o-main, .logistic>view {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
}

.product>view {
    width: 70%;
}

.product .mt50 {
    align-items: center;
}

.product>image {
    width: 170rpx;
    height: 170rpx;
    border-radius: 5px;
}

.logistic-o-main {
    padding: 20rpx 0;
    border-top: 1px solid #f4f4f4;
}

.logistic image {
    width: 34rpx;
    height: 120rpx;
}

.logistic-time {
    width: 100rpx;
    margin-top: 20rpx;
}

.logistic-cont {
    width: 99%;
    margin-top: 20rpx;
}

.logistic>view:first-child image {
    margin-left: 131rpx;
    margin-top: 35rpx;
    width: 30rpx !important;
    height: 63rpx !important;
}

.logistic>view:last-child image {
    width: 34rpx !important;
    height: 59rpx !important;
}
