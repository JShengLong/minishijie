/* pages/bind/bind.wxss */

page {
    background: #fff;
}

.logo {
    padding: 5% 0;
    text-align: center;
}

.logo image {
    width: 320rpx;
    height: 332rpx;
}

.reg {
    padding: 0 10%;
}

.reg>view {
    padding: 30rpx 0;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    border-bottom: 1px solid #f4f4f4;
}
.reg>view button{
    width: 25% !important;
    height: 55rpx;
    line-height: 55rpx !important;
    border-radius: 5px;
}
.reg image {
    width: 54rpx;
    height: 54rpx;
}

.reg>view input {
    width: 50%;
    margin-left: 3%;
}

.reg>button{
    width: 100% !important;
    height: 80rpx;
    line-height: 80rpx !important;
    border-radius: 60rpx !important;
    margin: 50rpx auto;
}
